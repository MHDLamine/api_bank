{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Bank API",
        "description": "API pour la gestion des comptes bancaires"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": ["http"],
    "paths": {
        "/accounts/{accountId}/balance": {
            "get": {
                "summary": "Obtenir le solde d'un compte",
                "parameters": [
                    {
                        "name": "accountId",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Solde retourné",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "balance": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts/{accountId}/transactions": {
            "get": {
                "summary": "Obtenir les transactions d'un compte",
                "parameters": [
                    {
                        "name": "accountId",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transactions retournées",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    }
                }
            }
        },
        "/accounts/{accountId}/transfer": {
            "post": {
                "summary": "Effectuer un virement",
                "parameters": [
                    {
                        "name": "fromAccountId",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "toAccountId",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "amount",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Virement effectué"
                    }
                }
            }
        }
    }
}
